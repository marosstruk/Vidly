@model Vidly.ViewModels.NewCustomerViewModel

@{
    ViewBag.Title = "New Customer";
}

<div style="max-width: 500px; margin-inline: auto;">
    <h2>New Customer</h2>

    @using (Html.BeginForm("Create", "Customers"))
    {
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Birthdate)
            @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })
        </div>
        <div class="form-check mb-3">
            @Html.LabelFor(m => m.IsSubscribedToNewsletter)
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new { @class = "form-check-input" })
        </div>
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.MembershipTypeId)
            @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "", new { @class = "form-select" })
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>